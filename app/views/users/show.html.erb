<h2>Hi, <%= @user.name %>. Here's a list of your saved items:</h2>

<h3> Wines </h3>
<ul>
	<% @user.alcohols.each do |alcohol| %>
			<% if alcohol.category == 'Wine' %>
				<li><%= link_to alcohol.brand, alcohol_path(alcohol) %></li>
			<% end %>
	<% end %>
</ul>


<h3> Beer </h3>
<ul>
	<% @user.alcohols.each do |alcohol| %>
		<% if alcohol.category == 'Beer' %>
			<li><%= link_to alcohol.brand, alcohol_path(alcohol) %></li>
		<% end %>
	<% end %>
</ul>


<h3> Liquor </h3>
<ul>
	<% @user.alcohols.each do |alcohol| %>
		<% if alcohol.category == 'Liquor' %>
		<li><%= link_to alcohol.brand, alcohol_path(alcohol) %></li>
		<% end %>
	<% end %>
</ul>
